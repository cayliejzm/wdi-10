<%= form_for @work do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.label :medium %>
    <%= f.text_field :medium %>
  </p>

  <p>
    <%= f.label :style %>
    <%= f.text_field :style %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.url_field :image %>
  </p>

  <p>
    <label>Artist</label>
    <select name="work[artist_id]">
      <option></option>
      <% Artist.all.each do |artist| %>
        <option value="<%= artist.id %>"><%= artist.name %></option>
      <% end %>
    </select>
  </p>

  <%= f.submit %>
<% end %>